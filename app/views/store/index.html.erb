<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
 <div class="center hero-unit">
<h1>Your Pragmatic Artist Catalog</h1>
 </div>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="item-price">
      <span class="item-price"><%= number_to_currency(product.price) %></span>
    </div>
  </div>
<% end %>